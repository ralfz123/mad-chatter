<%- include ('../partials/head', { title: 'Match'}) %>

<body>
  <%- include ('../partials/header') %>
  <h2>Match</h2>

  <main id="match">
    <section id="recipedata">
      <h2><%- data.title%></h2>
      <article>
        <a
          href="<%- data.video %>"
          target="_blank"
          title="Click to see in a video how to make <%- data.title%>"
        >
          <img src="<%- data.preview %>" alt="<%- data.title%>"
        /></a>

        <ul>
          <% data.ingredients.forEach((object) => {%>
          <li>
            <p><%= object %></p>
          </li>
          <% })%>
        </ul>
      </article>
    </section>

    <button>START MATCH</button>
    <!-- 3 ... 2 ... 1... GO! (emitted)
      (countdown starts ) -->

    <section id="playerdata">
      <article id="player-one">
        <h3>player 1:{name}</h3>
        <article>
          <form>
            <label for="timer">How long do you need? </label>
            <input
              type="number"
              id="timer"
              placeholder="ex. 34"
              style="width: 4rem"
              pattern="[0-9]+([\.,][0-9]+)?"
              step="0.01"
            />hours
            <button>set time</button>
          </form>
          <p><span></span> minutes</p>
        </article>
        <h3>Instructions</h3>
        <ol class="recipe-instructions">
          <p><%= data.instructions %></p>
        </ol>
      </article>

      <article id="player-two">
        <h3>player 2:{name}</h3>
        <article>
          <form>
            <label for="timerPlayer2">How long do you need? </label>
            <input
              type="number"
              id="timerPlayer2"
              placeholder="ex. 34"
              style="width: 4rem"
              pattern="[0-9]+([\.,][0-9]+)?"
              step="0.01"
            />hours
            <button>set time</button>
          </form>
          <p><span></span> minutes</p>
        </article>
        <h3>Instructions</h3>
        <ol class="recipe-instructions">
          <p><%= data.instructions %></p>
        </ol>
      </article>
    </section>
  </main>

  <%- include ('../partials/footer') %>
</body>
