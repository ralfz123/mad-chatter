<%- include ('../partials/head', { title: 'Match'}) %>

<body>
  <%- include ('../partials/header') %>
  <h2>Match</h2>

  <main id="match">
    <section id="recipedata">
      <h2><%- data.title%></h2>
      <article>
        <% if (data.video != ''){ %>

        <iframe
          id="ytplayer"
          type="text/html"
          width="140"
          height="360"
          src="<%- data.video%>"
          frameborder="0"
          allowfullscreen
        ></iframe>

        <img src="<%- data.preview %>" alt="<%- data.title%>" />

        <%} else {%>
        <img src="<%- data.preview %>" alt="<%- data.title%>" />
        <% } %>

        <ul>
          <% data.ingredients.forEach((object) => {%>
          <li>
            <p><%= object %></p>
          </li>
          <% })%>
        </ul>
      </article>
    </section>

    <button>START MATCH</button>
    <!-- 3 ... 2 ... 1... GO! (emitted)
      (countdown starts ) -->

    <section id="playerdata">
      <article id="player-one">
        <h3>player 1:{name}</h3>
        <article>
          <form>
            <label for="timer">How long do you need? </label>
            <input
              type="number"
              id="timer"
              placeholder="ex. 34"
              pattern="[0-9]+([\.,][0-9]+)?"
              step="0.01"
            />hours
            <button>set time</button>
          </form>
          <p><span></span> minutes</p>
        </article>
        <h3>Instructions</h3>
        <ol class="recipe-instructions">
          <% data.instructions.forEach((sentence) => { %>
          <li>
            <input type="checkbox" id="indexOfSentece" name="instructions-checklist" />
            <label for="indexOfSentece"> <%= sentence %> </label>
          </li>
          <%}) %>
        </ol>
        <button>Done!</button>
      </article>
      
      <article style="background-color: transparent; border-radius: 5px;">
        <h3>player 2:{name}</h3>
        <p>Estimated time:{time}</p>
      </article>

