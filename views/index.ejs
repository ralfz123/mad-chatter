<%- include ('./partials/head', {title: 'Home'}) %>

<body>
  <%- include ('./partials/header') %>

  <main>
    <section id="chat-query">
      <article>
        <form id="ingredientsForm">
          <label for="query-ingredient" style="font-size: 2rem"
            >My main ingredient is</label
          >
          <input
            type="text"
            id="query-ingredient"
            placeholder="e.x. Cheese"
            required
          />
          <button type="submit">Search</button>
          <p id="ingredients"></p>
        </form>
      </article>

      <article>
        <h3>Chat</h3>
        <p style="font-style: italic">Discuss here the recipes</p>
        <form id="chatForm">
          <label for="name">Firstname</label>
          <input type="text" id="name" placeholder="loginName" required />

          <ol id="messages"></ol>
          <input
            type="text"
            id="message"
            placeholder="Shall we do the pasta?"
          />
          <button type="submit">Send</button>
        </form>
      </article>
    </section>

    <section id="recipes">
      <h2>Recipes</h2>
      <ol>
        <p>Find recipes by entering a ingredient in the input field.</p>
      </ol>
      <form action="/match" method="POST" enctype="application/x-www-form-urlencoded">
        <label for="chosen-recipe">Chosen recipe(id):</label>
        <input
          type="number"
          id="chosen-recipe"
          placeholder="52957"
          name="recipeID"
          required
        />
        <button type="submit">Choose!</button>
      </form>
    </section>
  </main>

  <%- include ('./partials/footer') %>
