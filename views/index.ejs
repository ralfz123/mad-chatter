<%- include ('./partials/head', {title: 'Home'}) %>

<body>
  <%- include ('./partials/header') %>

  <main>
    <section>
      <form action="">
        <legend>
          <label for="nickname">Your fancy nickname is </label>
          <input
            type="text"
            name="nickname"
            id="nickname"
            required
            title="Fill in your nickname"
          />

          <p>You are joining the room</p>
          <input type="radio" name="room" value="room-1" id="room-1" />
          <label for="room-1">room 1 </label>

          <input type="radio" name="room" value="room-2" id="room-2" />
          <label for="room-2">room 2 </label>

          <input type="radio" name="room" value="room-3" id="room-3" />
          <label for="room-3">room 3 </label>

          <input type="radio" name="room" value="room-4" id="room-4" />
          <label for="room-4">room 4 </label>

          <input type="radio" name="room" value="room-5" id="room-5" />
          <label for="room-5">room 5 </label>

          <input type="radio" name="room" value="room-6" id="room-6" />
          <label for="room-6">room 6 </label>

          <input type="radio" name="room" value="room-7" id="room-7" />
          <label for="room-7">room 7 </label>

          <input type="radio" name="room" value="room-8" id="room-8" />
          <label for="room-8">room 8 </label>

          <input type="radio" name="room" value="room-9" id="room-9" />
          <label for="room-9">room 9 </label>

          <input type="radio" name="room" value="room-10" id="room-10" />
          <label for="room-10">room 10 </label>

          <button type="submit">Join Room</button>
        </legend>
      </form>
    </section>

    <section id="chat-query">
      <article>
        <form id="ingredientsForm">
          <label for="query-ingredient">My main ingredient is</label>
          <input
            type="text"
            id="query-ingredient"
            placeholder="e.x. Cheese"
            title="Fill in an ingredient"
            required
          />
          <button type="submit">Search</button>
          <p id="ingredients"></p>
        </form>
      </article>

      <article>
        <h3>Chat</h3>
        <p>What shall we eat?</p>
        <form id="chatForm">
          <ol id="messages"></ol>
          <label for="message">Message</label>
          <input
            type="text"
            id="message"
            placeholder="Pasta, right?"
            title="Type here your message"
          />
          <button type="submit">Send</button>
        </form>
        <ul class="users"></ul>
      </article>
    </section>

    <section id="recipes">
      <h2>Recipes</h2>
      <ol>
        <p>Find recipes by entering a ingredient in the input field.</p>
        <div class="loader"></div>
      </ol>
      <form
        action="/match/id"
        method="POST"
        enctype="application/x-www-form-urlencoded"
      >
        <label for="chosen-recipe">Chosen recipe(id):</label>
        <input
          type="number"
          id="chosen-recipe"
          placeholder="52779"
          title="Fill in the ID of the recipe"
          name="recipeID"
          required
        />
        <button type="submit">Choose!</button>
      </form>
    </section>
  </main>

  <%- include ('./partials/footer') %>
</body>
