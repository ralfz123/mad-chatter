<%- include ('./partials/head', {title: 'Home'}) %>

<body>
  <%- include ('./partials/header') %>

  <main>
    <section>
      <form action="">
        <legend>
          <label for="nickname"
            >Nickname
            <input type="text" name="nickname" id="nickname" />
          </label>

          <input type="radio" name="room" value="tasty" />TASTY
          <input type="radio" name="room" value="fast" />FAST
          <input type="radio" name="room" value="lol" />LOL
          <input type="radio" name="room" value="delicious" />DELICIOUS
          <input type="radio" name="room" value="flowerpower" />FLOWERPOWER
          <button type="submit">Join Room</button>
        </legend>
      </form>
    </section>

    <section id="chat-query">
      <article>
        <form id="ingredientsForm">
          <label for="query-ingredient">My main ingredient is</label>
          <input
            type="text"
            id="query-ingredient"
            placeholder="e.x. Cheese"
            title="Fill in an ingredient"
            required
          />
          <button type="submit">Search</button>
          <p id="ingredients"></p>
        </form>
      </article>

      <article>
        <h3>Chat</h3>
        <p>What shall we eat?</p>
        <form id="chatForm">
          <ol id="messages"></ol>
          <label for="message">Message</label>
          <input
            type="text"
            id="message"
            placeholder="Pasta, right?"
            title="Type here your message"
          />
          <button type="submit">Send</button>
        </form>
        <ul class="users"></ul>
      </article>
    </section>

    <section id="recipes">
      <h2>Recipes</h2>
      <ol>
        <p>Find recipes by entering a ingredient in the input field.</p>
        <div class="loader"></div>
      </ol>
      <form
        action="/match/id"
        method="POST"
        enctype="application/x-www-form-urlencoded"
      >
        <label for="chosen-recipe">Chosen recipe(id):</label>
        <input
          type="number"
          id="chosen-recipe"
          placeholder="52779"
          title="Fill in the ID of the recipe"
          name="recipeID"
          required
        />
        <button type="submit">Choose!</button>
      </form>
    </section>
  </main>

  <%- include ('./partials/footer') %>
</body>
