<!DOCTYPE html>
<html lang="en">
  <head>
    <%- include ('./partials/head') %>
    <title>Home</title>
  </head>
  <body>
    <%- include ('./partials/header') %>

    <main>
      <section id="chat-query">
        <article>
          <h2>Ingredients</h2>
          <form id="ingredientsForm">
            <label for="query-ingredient"
              >What ingredients are in your fridge?</label
            >
            <input
              type="text"
              id="query-ingredient"
              placeholder="e.x. Tomatoe"
            />
            <ul id="ingredients"></ul>
            <button type="submit">Search</button>
          </form>
        </article>

        <article>
          <h3>Chat</h3>
          <form id="chatForm">
            <label for="name">Firstname</label>
            <input type="text" id="name" placeholder="John Doe" />

            <label for="message">Message</label>
            <input type="text" id="message" placeholder="Say hi" />
            <button type="submit">Send</button>
          </form>
          <p>Discuss here the recipes</p>
          <ol id="messages"></ol>
        </article>
      </section>

      <section id="recipes">
        <h2>Recipes</h2>
        <ol>
          <% if (data.length > 0) { data.forEach(({title,id}) => { %>

          <li>
            <p><%= title%></p>
          </li>

          <%}) } else{ %>
          <p>Find recipes by entering a ingredient in the input field</p>
          <%} %>
        </ol>
      </section>
    </main>

    <%- include ('./partials/footer') %>

