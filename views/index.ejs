          />
          <label for="room10">room 10 </label>

          <button type="submit">Join Room</button>
        </legend>
      </form>
    </section>

    <section id="chat-query">
      <article>
        <form id="ingredientsForm">
          <label for="query-ingredient">My main ingredient is</label>
          <input
            type="text"
            id="query-ingredient"
            placeholder="e.x. Cheese"
            title="Fill in an ingredient"
            required
          />
          <button type="submit">Search</button>
        </form>
      </article>

      <article>
        <h3>Chat</h3>
        <p>What shall we eat?</p>
        <form id="chatForm">
          <ol id="messages"></ol>
          <label for="message">Message</label>
          <input
            type="text"
            id="message"
            placeholder="Pasta, right?"
            title="Type here your message"
          />
          <button type="submit">Send</button>
        </form>
        <ul class="users"></ul>
        <div class="likedRecipes">
          <h3>Liked Recipes</h3>
          <ul></ul>
        </div>
      </article>
    </section>

    <section id="recipes">
      <h2>Recipes</h2>
      <form>
        <ol>
          <p>Find recipes by entering a ingredient in the input field.</p>
          <div class="loader"></div>
        </ol>
        <button type="submit">Add +</button>
      </form>
    </section>

    <section id="won-recipe">
      <p>Chosen by: <span></span></p>
      <p></p>
      <h2>Won recipe: <span></span></h2>
      <h3>Ingredients</h3>
      <form>
        <ul></ul>
      </form>
      <img />      
      <h3>Instruction manual</h3>
      <form>
        <ol></ol>
      </form>
      
    </section>
  </main>

  <%- include ('./partials/footer') %>
